#!/bin/sh

set -e

ON_USER=on-twitterbot
ON_HOME=/var/lib/on-twitterbot

case "$1" in
    configure)
        if ! getent passwd "$ON_USER" >/dev/null; then
            adduser --quiet --system --home "$ON_HOME" --disabled-password --shell /bin/sh "$ON_USER"
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
